<h1 class="m-3">Posts</h1>
  {{#each posts as |post| }}
    <div class="card mb-2">
      <div class="card-header">
        <h2>{{post.title}}</h2>
      </div>
      <div class="card-body">
        <p class="card-text">{{post.postBody}}</p>
        <a href="/posts/{{post.id}}" class="btn btn-outline-primary btn-lg btn-block">More details</a>
      </div>
      <div class="card-footer text-body-secondary">
        By: {{post.user.name}}
        <span class="d-block">Date: {{format_date post.dateCreated}}</span>
      </div>
    </div>
  {{/each}}